<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:textAlignment="textEnd"
        tools:context=".MainActivity">

        <com.google.android.gms.ads.AdView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
            ads:layout_constraintTop_toTopOf="parent"
            ads:layout_constraintBottom_toBottomOf="@+id/gl_top_rv"
            >
        </com.google.android.gms.ads.AdView>
        <Button
            android:id="@+id/point_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/number_color"
            android:text="."
            android:textStyle="bold"
            android:textSize="34sp"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintEnd_toStartOf="@+id/gl_v_3"
            ads:layout_constraintHorizontal_bias="0.0"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintTop_toTopOf="@+id/gl_h_1"
            ads:layout_constraintVertical_bias="0.0" />
    
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            ads:layout_constraintGuide_percent="0.25" />
    
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            ads:layout_constraintGuide_begin="176dp"
            ads:layout_constraintGuide_percent="0.5" />
    
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            ads:layout_constraintGuide_end="75dp"
            ads:layout_constraintGuide_percent="0.75" />
    
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_h_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            ads:layout_constraintGuide_percent="0.40" />
    
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_h_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            ads:layout_constraintGuide_percent="0.52" />
    
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_h_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            ads:layout_constraintGuide_percent="0.64" />
    
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_h_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            ads:layout_constraintGuide_percent="0.76" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_h_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            ads:layout_constraintGuide_percent="0.88" />
        <Button
            android:id="@+id/one_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/number_color"
            android:text="1"
            android:textSize="34sp"
            android:textStyle="bold"
            ads:layout_constraintBottom_toTopOf="@+id/gl_h_1"
            ads:layout_constraintEnd_toStartOf="@+id/gl_v_3"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintTop_toTopOf="@+id/gl_h_2" />
    
        <Button
            android:id="@+id/seven_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/number_color"
            android:text="7"
            android:textSize="34sp"
            android:textStyle="bold"
            ads:layout_constraintBottom_toTopOf="@+id/gl_h_3"
            ads:layout_constraintEnd_toStartOf="@+id/gl_v_3"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintTop_toTopOf="@+id/gl_h_4" />
    
        <Button
            android:id="@+id/divide_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/operator_color"
            android:text="÷"
            android:textSize="50sp"
            ads:layout_constraintBottom_toTopOf="@+id/gl_h_4"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintStart_toStartOf="@+id/gl_v_1"
            ads:layout_constraintTop_toTopOf="@+id/gl_h_5" />
    
        <Button
            android:id="@+id/eight_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/number_color"
            android:text="8"
            android:textSize="34sp"
            android:textStyle="bold"
            ads:layout_constraintBottom_toTopOf="@+id/gl_h_3"
            ads:layout_constraintEnd_toStartOf="@+id/gl_v_2"
            ads:layout_constraintStart_toStartOf="@+id/gl_v_3"
            ads:layout_constraintTop_toTopOf="@+id/gl_h_4" />
    
        <Button
            android:id="@+id/nine_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/number_color"
            android:text="9"
            android:textSize="34sp"
            android:textStyle="bold"
            ads:layout_constraintBottom_toTopOf="@+id/gl_h_3"
            ads:layout_constraintEnd_toStartOf="@+id/gl_v_1"
            ads:layout_constraintStart_toStartOf="@+id/gl_v_2"
            ads:layout_constraintTop_toTopOf="@+id/gl_h_4" />
    
        <Button
            android:id="@+id/multiply_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/operator_color"
            android:text="×"
            android:textSize="50sp"
            ads:layout_constraintBottom_toTopOf="@+id/gl_h_3"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintStart_toStartOf="@+id/gl_v_1"
            ads:layout_constraintTop_toTopOf="@+id/gl_h_4" />
    
        <Button
            android:id="@+id/subtract_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/operator_color"
            android:text="−"
            android:textScaleX="1.2"
            android:textSize="50sp"
            ads:layout_constraintBottom_toTopOf="@+id/gl_h_2"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintStart_toStartOf="@+id/gl_v_1"
            ads:layout_constraintTop_toTopOf="@+id/gl_h_3" />
    
        <Button
            android:id="@+id/two_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/number_color"
            android:text="2"
            android:textSize="34sp"
            android:textStyle="bold"
            ads:layout_constraintBottom_toTopOf="@+id/gl_h_1"
            ads:layout_constraintEnd_toStartOf="@+id/gl_v_2"
            ads:layout_constraintStart_toStartOf="@+id/gl_v_3"
            ads:layout_constraintTop_toTopOf="@+id/gl_h_2" />
    
        <Button
            android:id="@+id/three_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/number_color"
            android:text="3"
            android:textStyle="bold"
            android:textSize="34sp"
            ads:layout_constraintBottom_toTopOf="@+id/gl_h_1"
            ads:layout_constraintEnd_toStartOf="@+id/gl_v_1"
            ads:layout_constraintStart_toStartOf="@+id/gl_v_2"
            ads:layout_constraintTop_toTopOf="@+id/gl_h_2" />
    
        <Button
            android:id="@+id/addition_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/operator_color"
            android:text="+"
            android:textSize="50sp"
            ads:layout_constraintBottom_toTopOf="@+id/gl_h_1"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintHorizontal_bias="1.0"
            ads:layout_constraintStart_toStartOf="@+id/gl_v_1"
            ads:layout_constraintTop_toTopOf="@+id/gl_h_2" />
    
        <Button
            android:id="@+id/equals_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/operator_color"
            android:text="="
            android:textSize="50sp"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintStart_toStartOf="@+id/gl_v_1"
            ads:layout_constraintTop_toTopOf="@+id/gl_h_1" />
    
        <Button
            android:id="@+id/zero_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/number_color"
            android:text="0"
            android:textSize="34sp"
            android:textStyle="bold"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintEnd_toStartOf="@+id/gl_v_2"
            ads:layout_constraintStart_toStartOf="@+id/gl_v_3"
            ads:layout_constraintTop_toTopOf="@+id/gl_h_1" />
    
        <Button
            android:id="@+id/six_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/number_color"
            android:text="6"
            android:textSize="34sp"
            android:textStyle="bold"
            ads:layout_constraintBottom_toTopOf="@+id/gl_h_2"
            ads:layout_constraintEnd_toStartOf="@+id/gl_v_1"
            ads:layout_constraintStart_toStartOf="@+id/gl_v_2"
            ads:layout_constraintTop_toTopOf="@+id/gl_h_3" />
    
        <Button
            android:id="@+id/five_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/number_color"
            android:text="5"
            android:textSize="34sp"
            android:textStyle="bold"
            ads:layout_constraintBottom_toTopOf="@+id/gl_h_2"
            ads:layout_constraintEnd_toStartOf="@+id/gl_v_2"
            ads:layout_constraintStart_toStartOf="@+id/gl_v_3"
            ads:layout_constraintTop_toTopOf="@+id/gl_h_3" />
    
        <Button
            android:id="@+id/four_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/number_color"
            android:text="4"
            android:textSize="34sp"
            android:textStyle="bold"
            ads:layout_constraintBottom_toTopOf="@+id/gl_h_2"
            ads:layout_constraintEnd_toStartOf="@+id/gl_v_3"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintTop_toTopOf="@+id/gl_h_3" />

        <Button
            android:id="@+id/clear_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/clear_color"
            android:textColor="#cc0000"
            android:text="CLEAR"
            android:textSize="34sp"
            android:textStyle="bold"
            ads:layout_constraintBottom_toTopOf="@+id/gl_h_4"
            ads:layout_constraintEnd_toStartOf="@+id/gl_v_1"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintTop_toTopOf="@+id/gl_h_5" />
    
        <TextView
            android:id="@+id/result_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center|end"
            android:textAlignment="textEnd"
            android:textColor="@color/equation_color"
            android:textSize="48sp"
            android:autoSizeTextType="uniform"
            ads:layout_constraintBottom_toTopOf="@+id/gl_bottom_rv"
            ads:layout_constraintEnd_toStartOf="@+id/gl_right_rv"
            ads:layout_constraintStart_toStartOf="@+id/gl_left_rv"
            ads:layout_constraintTop_toTopOf="@+id/gl_top_rv" />
    
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_bottom_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            ads:layout_constraintGuide_end="671dp"
            ads:layout_constraintGuide_percent="0.2" />
    
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_top_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            ads:layout_constraintGuide_begin="72dp"
            ads:layout_constraintGuide_percent="0.1" />
    
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_left_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            ads:layout_constraintGuide_begin="53dp"
            ads:layout_constraintGuide_percent="0.1" />
    
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_right_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            ads:layout_constraintGuide_begin="328dp"
            ads:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_bottom_ev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            ads:layout_constraintGuide_percent="0.30"/>

        <TextView
            android:id="@+id/equation_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center|end"
            android:textAlignment="textEnd"
            android:textColor="@color/equation_color"
            android:textSize="40sp"

            ads:layout_constraintBottom_toTopOf="@+id/gl_h_5"
            ads:layout_constraintEnd_toStartOf="@+id/gl_right_rv"

            ads:layout_constraintHorizontal_bias="0.0"
            ads:layout_constraintStart_toStartOf="@+id/gl_left_rv"
            ads:layout_constraintTop_toTopOf="@id/gl_bottom_rv"

            ads:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/del_color"
            android:textColor="#cc0000"
            android:text="⌫"
            android:textSize="34sp"
            android:textStyle="bold"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintEnd_toStartOf="@+id/gl_v_1"
            ads:layout_constraintStart_toStartOf="@+id/gl_v_2"
            ads:layout_constraintTop_toTopOf="@+id/gl_h_1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/teal_700"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:itemTextAppearance="@style/Theme.ItemMenu"
        app:menu="@menu/nav_menu">

    </com.google.android.material.navigation.NavigationView>




</androidx.drawerlayout.widget.DrawerLayout>